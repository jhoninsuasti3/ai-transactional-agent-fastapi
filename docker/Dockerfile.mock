# =============================================================================
# Dockerfile for Mock Transaction API
# =============================================================================
FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install FastAPI and Uvicorn only (minimal dependencies)
RUN pip install --no-cache-dir \
    fastapi[standard]==0.115.0 \
    uvicorn[standard]==0.31.0

# Copy mock API code
COPY mock_api/ /app/mock_api/

# Create non-root user
RUN useradd -m -u 1000 mockuser && \
    chown -R mockuser:mockuser /app
USER mockuser

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=15s --timeout=5s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8001/health || exit 1

# Run mock API
CMD ["uvicorn", "mock_api.main:app", "--host", "0.0.0.0", "--port", "8001"]