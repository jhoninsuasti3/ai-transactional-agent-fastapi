# =============================================================================
# Dockerfile for LangGraph Agents Service
# Handles conversational AI with LangGraph + LangChain
# =============================================================================

FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_SYSTEM_PYTHON=1 \
    PATH="/root/.local/bin:$PATH"

WORKDIR /app

# Install system dependencies and uv
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./

# Install all dependencies without installing the project itself
RUN /root/.local/bin/uv sync --frozen --no-dev --no-install-project

# Copy application code
COPY apps/ /app/apps/
COPY alembic/ /app/alembic/
COPY alembic.ini /app/alembic.ini

# Create non-root user
RUN useradd -m -u 1000 agentuser && \
    chown -R agentuser:agentuser /app
USER agentuser

# Set PATH for agentuser
ENV PATH="/root/.local/bin:/app/.venv/bin:$PATH"

# Expose port (if agents expose HTTP endpoint in future)
EXPOSE 8002

# Health check (placeholder for future implementation)
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD echo "Agent service healthy" || exit 1

# Start agents service
# For now, this is a placeholder - will be updated when LangGraph agent is implemented
CMD ["sh", "-c", "echo 'Agents service ready. Waiting for LangGraph implementation.' && tail -f /dev/null"]