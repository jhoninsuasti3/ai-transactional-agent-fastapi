# =============================================================================
# Dockerfile for LangGraph Agents Service
# Handles conversational AI with LangGraph + LangChain
# =============================================================================

FROM python:3.12-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    UV_SYSTEM_PYTHON=1 \
    PATH="/root/.local/bin:$PATH"

WORKDIR /app

# Install system dependencies and uv
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Copy dependency files
COPY pyproject.toml uv.lock README.md ./

# Install all dependencies INCLUDING dev dependencies for langgraph-cli
RUN /root/.local/bin/uv sync --frozen --no-install-project

# Copy application code
COPY apps/ /app/apps/
COPY alembic/ /app/alembic/
COPY alembic.ini /app/alembic.ini
COPY langgraph.json /app/langgraph.json

# Create non-root user
RUN useradd -m -u 1000 agentuser && \
    chown -R agentuser:agentuser /app
USER agentuser

# Set PATH for agentuser
ENV PATH="/root/.local/bin:/app/.venv/bin:$PATH"

# Expose LangGraph API port
EXPOSE 8002

# Health check - verify LangGraph API is responding
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8002/ok || exit 1

# Start LangGraph API server using uvicorn directly
# This runs the LangGraph API without needing Docker-in-Docker
CMD ["/app/.venv/bin/uvicorn", "langgraph_api.server:app", "--host", "0.0.0.0", "--port", "8002"]
